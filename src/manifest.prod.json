{
    "name": "ONES Chrome Helper",
    "description": "yoooooooooooooo.",
    "version": "1.0",
    "manifest_version": 2,
    "minimum_chrome_version": "80",
    "permissions": ["storage", "webRequest", "*://*/*"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["http://dev.localhost/*", "https://dev.myones.net/*"],
            "css": ["css/all.css"],
            "js": ["js/all.js"],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icons/favicon_x16.png",
        "32": "icons/favicon_x1024.png",
        "48": "icons/favicon_x1024.png",
        "128": "icons/favicon_x1024.png"
    }
}
